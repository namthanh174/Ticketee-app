<div id="ticket">
  <header>
    <h1><%= @project.name %></h1>
  </header>
  <header>
    <h2><%= @ticket.name %></h2>
  </header>
  <%= simple_format(@ticket.description) %>
  <table is="attributes">
    <tr>
      <td>Author: </td>
      <td><%= @ticket.author.email %></td>
    </tr>
    <tr>
      <td>Created: </td>
      <td><%= time_ago_in_words @ticket.created_at %> ago</td>
    </tr>
  </table>
  <ul class="actions">
    <li><%= link_to "Edit Ticket", edit_project_ticket_path(@project), class: "edit" %></li>
    <li><%= link_to "Delete Ticket", project_ticket_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this ticket?"}, class: "delete" %></li>
  </ul>
</div>